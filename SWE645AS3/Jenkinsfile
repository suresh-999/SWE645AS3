pipeline {
    
    environment {
        // Define Docker Hub registry URL if needed, or leave empty if using Docker Hub's default registry
        //registry = ''
        registryCredential = 'dockerhubcred'
        dateTag = new Date().format("yyyyMMdd-HHmmss")
    }
    agent any
    tools {
        maven 'Maven 3.8.6'
    }
    stages {
        stage('Maven clean & Install') {
            steps {
                script {
                    // Change to the directory containing the pom.xml
                    dir('SWE645AS3') {
                        sh 'mvn clean install'
                    }
                }
            }
        }
        stage('Build Docker Image and Push') {
            steps {
                script {
                    // You don't have to mention the Docker image name in the registry variable
                    docker.withRegistry('', registryCredential) {
                        def app = docker.build("suresh999/swe645as3:${dateTag}", '--no-cache .')
                        app.push()
                    }
                }
            }
        }
        stage('Deploying to single node in Rancher') {
            steps {
                script {
                    // Use the full image name including the tag for deployment
                    sh "kubectl set image deployment/deploy1 container-0=suresh999/swe645as3:${dateTag}"
                    sh "kubectl set image deployment/deploy-lb container-0=suresh999/swe645as3:${dateTag}"
                }
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }    
}
