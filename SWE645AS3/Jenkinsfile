// demo

pipeline {
    agent any
    environment {
        // Environment variables for Docker credentials
        DOCKERHUB_CRED_ID = 'dockerhubcred' // The ID of the Docker credentials in Jenkins
        // Docker image tag based on the current timestamp
        IMAGE_TAG = "${new Date().format('yyyyMMddHHmmss')}"
        // Docker image repository name
        IMAGE_REPO = 'swe645as3'
        // Docker Hub username environment variable
        DOCKERHUB_USER = ''
        // Docker Hub password environment variable
        DOCKERHUB_PASS = ''
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build JAR with Maven') {
            steps {
                dir('SWE645AS3') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: DOCKERHUB_CRED_ID, passwordVariable: 'DOCKERHUB_PASS', usernameVariable: 'DOCKERHUB_USER')]) {
                        sh "echo $DOCKERHUB_PASS | docker login --username $DOCKERHUB_USER --password-stdin"
                        sh "docker build -t ${IMAGE_REPO}:${IMAGE_TAG} ."
                    }
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: DOCKERHUB_CRED_ID, passwordVariable: 'DOCKERHUB_PASS', usernameVariable: 'DOCKERHUB_USER')]) {
                        sh "docker push ${IMAGE_REPO}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Assuming you have 'kubectl' installed and configured on your Jenkins agent
                    sh "kubectl set image deployment/studentsurvey ${IMAGE_REPO}=${IMAGE_REPO}:${IMAGE_TAG} --record"
                    // Replace 'studentsurvey' with your actual deployment name
                }
            }
        }
    }
    post {
        always {
            // Log out from Docker Hub
            sh "docker logout"
        }
    }
}
